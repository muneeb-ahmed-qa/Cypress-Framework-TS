{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./cypress/*"],
      "@pages/*": ["./cypress/pages/*"],
      "@support/*": ["./cypress/support/*"],
      "@fixtures/*": ["./cypress/fixtures/*"],
      "@utils/*": ["./cypress/utils/*"]
    }
  },
  "include": [
    "cypress/**/*.ts",
    "cypress.config.ts",
    "cypress/support/global.d.ts",
    "cypress/support/commands.d.ts",
    "cypress/support/component.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

